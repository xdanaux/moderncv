  \definecolor{subsectioncolor}{rgb}{0.95,0.55,0.15}\fi
\if@colorgreen
  \definecolor{addresscolor}{rgb}{0.30,0.65,0.15}
  \definecolor{sectionrectanglecolor}{rgb}{0.55,0.85,0.35}
